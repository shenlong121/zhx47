<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhx47.qxx.mapper.PlatformInfoMapper">
    <update id="updateQDDCookie">
        update platform_info
        set `value` = #{token}
        where `key` = 'qdd_cookie'
    </update>

    <select id="getBonusInfo" resultType="java.util.Map">
        select `key`, CONVERT(value USING utf8) value from qxx.platform_info where type = 'commission'
    </select>

    <select id="getSets" resultType="java.util.Map">
        select `key`, CONVERT(value USING utf8) value from qxx.platform_info where type = 'price'
    </select>

    <select id="getSystemInfo" resultType="java.util.Map">
        select p.`key`, CONVERT(p.value USING utf8) value from qxx.platform_info p where p.type = 'system';
    </select>

    <update id="updateQDDURL">
        update platform_info
        set `value` = #{url}
        where `key` = 'qdd_url'
    </update>
</mapper>