<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.zhx47.qxx.mapper.CollectMapper">
    <select id="queryByUserId" resultType="top.zhx47.qxx.datasource.entity.Collect" parameterType="java.lang.String">
        SELECT *
        FROM `collect`
        WHERE user_id = #{userId}
    </select>

    <select id="queryByGroupAndUserId" resultType="top.zhx47.qxx.datasource.entity.Collect">
        SELECT *
        FROM `collect`
        WHERE user_id = #{userId}
        and `group` = #{siteId}
        order by `index`
    </select>

    <delete id="deleteCollect">
        delete from `collect` where user_id = #{userId} and site_id = #{siteId}
    </delete>

    <update id="updateCollect">
        update `collect` set site_name = #{siteName} where collect_id = #{collectId}
    </update>
</mapper>